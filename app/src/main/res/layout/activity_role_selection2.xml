<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.example.samosgo3.RoleSelection2">


    <TextView
        android:id="@+id/rt"
        android:layout_width="209dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Please select a role"
        android:textAlignment="center"
        android:textColor="@color/redcrimson"
        android:textColorHighlight="#111"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.269" />


    <Button
        android:id="@+id/brp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/redcrimson"
        android:text="passenger"
        android:textColor="#FFF8DC"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.386">

    </Button>

    <Button
        android:id="@+id/brd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/redcrimson"
        android:text="driver"
        android:textColor="#FFF8DC"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toEndOf="@+id/brp"
        app:layout_constraintTop_toBottomOf="@+id/rt"
        app:layout_constraintVertical_bias="0.075"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>